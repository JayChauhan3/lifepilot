{
  "name": "lifepilot",
  "version": "1.0.0",
  "description": "LifePilot AI Assistant - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python3 start.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
